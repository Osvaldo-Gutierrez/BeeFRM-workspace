<xsd:schema xmlns:xsd='http://www.w3.org/2001/XMLSchema'
           targetNamespace='http://cl/bee/genfrmjava/formdef/schema'
                     xmlns='http://cl/bee/genfrmjava/formdef/schema'>

 <!-- ========================================================================================== ==
   == form
   == ========================================================================================== -->

 <xsd:element name='form'>

  <xsd:complexType>

   <xsd:sequence minOccurs='1' maxOccurs='unbounded'>
    <xsd:choice>
      <xsd:element ref='field'/>
      <xsd:element ref='array'/>
      <xsd:element ref='primary'/>
      <xsd:element ref='foreign'/>
      <xsd:element ref='text'/>
    </xsd:choice>
   </xsd:sequence>

   <xsd:attribute name='entity' type='xsd:string' use='required'/>

  </xsd:complexType>

 </xsd:element>

 <!-- ========================================================================================== ==
   == field
   == ========================================================================================== -->

 <xsd:element name='field'>

  <xsd:complexType>

   <xsd:sequence minOccurs='0' maxOccurs='unbounded'>
    <xsd:choice>
      <xsd:element ref='type'/>
      <xsd:element ref='fms'/>
      <xsd:element ref='default'/>
      <xsd:element ref='index'/>
    </xsd:choice>
   </xsd:sequence>

   <xsd:attribute name='name'    type='xsd:string' use='required'/>
   <xsd:attribute name='special' type='xsd:string' default=''/>
  </xsd:complexType>

 </xsd:element>

 <!-- ========================================================================================== ==
   == array
   == ========================================================================================== -->

 <xsd:element name='array'>

  <xsd:complexType>

   <xsd:sequence>
    <xsd:element ref='field' maxOccurs='unbounded'/>
   </xsd:sequence>

   <xsd:attribute name='size' type='xsd:unsignedInt' use='required'/>

  </xsd:complexType>

 </xsd:element>

 <!-- ========================================================================================== ==
   == primary
   == ========================================================================================== -->

 <xsd:element name='primary'>

  <xsd:complexType>

   <xsd:sequence>
    <xsd:element ref='field' maxOccurs='unbounded'/>
   </xsd:sequence>

  </xsd:complexType>

 </xsd:element>

 <!-- ========================================================================================== ==
   == foreign
   == ========================================================================================== -->

 <xsd:element name='foreign'>

  <xsd:complexType>

   <xsd:sequence>
    <xsd:element ref='field' maxOccurs='unbounded'/>
   </xsd:sequence>

   <xsd:attribute name='entity' type='xsd:string' use='required'/>

  </xsd:complexType>

 </xsd:element>

 <!-- ========================================================================================== ==
   == text
   == ========================================================================================== -->

 <xsd:element name='text'>

  <xsd:complexType>

   <xsd:attribute name='caption' type='xsd:string'      use='required'/>
   <xsd:attribute name='row'     type='xsd:unsignedInt' use='required'/>
   <xsd:attribute name='column'  type='xsd:unsignedInt' use='required'/>

  </xsd:complexType>

 </xsd:element>

 <!-- ========================================================================================== ==
   == type
   == ========================================================================================== -->

 <xsd:element name='type'>

  <xsd:complexType>

   <xsd:attribute name='name'     type='TipoType'        use='required'/>
   <xsd:attribute name='size'     type='xsd:unsignedInt' use='required'/>
   <xsd:attribute name='integers' type='xsd:unsignedInt' default='0'/>
   <xsd:attribute name='decimals' type='xsd:unsignedInt' default='0'/>
   <xsd:attribute name='sign'     type='YesNoType'       default='no'/>

  </xsd:complexType>

 </xsd:element>

 <!-- ========================================================================================== ==
   == TipoType
   == ========================================================================================== -->

 <xsd:simpleType name='TipoType'>

  <xsd:restriction base='xsd:string'>
   <xsd:enumeration value='integer'/>
   <xsd:enumeration value='long'   />
   <xsd:enumeration value='double' />
   <xsd:enumeration value='char'   />
   <xsd:enumeration value='boolean'/>
   <xsd:enumeration value='string' />
   <xsd:enumeration value='date'   />
  </xsd:restriction>

 </xsd:simpleType>

 <!-- ========================================================================================== ==
   == YesNoType
   == ========================================================================================== -->

 <xsd:simpleType name='YesNoType'>

  <xsd:restriction base='xsd:string'>
   <xsd:enumeration value='yes'/>
   <xsd:enumeration value='no' />
  </xsd:restriction>

 </xsd:simpleType>

 <!-- ========================================================================================== ==
   == fms
   == ========================================================================================== -->

 <xsd:element name='fms'>

  <xsd:complexType>

   <xsd:attribute name='name'       type='xsd:string'      use='required'/>
   <xsd:attribute name='modifier'   type='ModifierType'    use='required'/>
   <xsd:attribute name='row'        type='xsd:unsignedInt' default='0'/>
   <xsd:attribute name='column'     type='xsd:unsignedInt' default='0'/>
   <xsd:attribute name='picture'    type='xsd:string'      use='required'/>
   <xsd:attribute name='attributes' type='xsd:unsignedInt' use='required'/>

  </xsd:complexType>

 </xsd:element>

 <!-- ========================================================================================== ==
   == ModifierType
   == ========================================================================================== -->

 <xsd:simpleType name='ModifierType'>

  <xsd:restriction base='xsd:string'>
   <xsd:enumeration value='IKY'/>
   <xsd:enumeration value='MKY'/>
   <xsd:enumeration value='AKY'/>
   <xsd:enumeration value='FLD'/>
  </xsd:restriction>

 </xsd:simpleType>

 <!-- ========================================================================================== ==
   == default
   == ========================================================================================== -->

 <xsd:element name='default'>

  <xsd:complexType>

   <xsd:attribute name='value' type='xsd:string'/>

  </xsd:complexType>

 </xsd:element>

 <!-- ========================================================================================== ==
   == index
   == ========================================================================================== -->

 <xsd:element name='index'>

  <xsd:complexType>

   <xsd:sequence>
    <xsd:element ref='pos' maxOccurs='unbounded'/>
   </xsd:sequence>

  </xsd:complexType>

 </xsd:element>

 <!-- ========================================================================================== ==
   == pos
   == ========================================================================================== -->

 <xsd:element name='pos'>

  <xsd:complexType>

   <xsd:attribute name='row'    type='xsd:unsignedInt'/>
   <xsd:attribute name='column' type='xsd:unsignedInt'/>

  </xsd:complexType>

 </xsd:element>


</xsd:schema>