$!	PID = F$EXTRACT(10,4,F$PROCCES())
$!	SHOW USER/OUT=TMP:'PID'USER.TMP
$	I = 0
$ ELM:
$	USUARIO = F$ELEMENT(I,",","''P1'")
$	IF USUARIO .EQS. "," THEN GOTO FIN
$!	SEARC/NOLOG/OUTPUT=TMP:'PID'SEAR.TMP TMP:'PID'USER.TMP "''USUARIO'"
$!	OPEN/READ FILE_INPUT TMP:'PID'SEAR.TMP
$	IF P5 .EQS. "" THEN MSG = "Archivos en tu AREA ''P2' de ''GNS$PRY' de parte de ''P3'"
$	IF P5 .NES. "" THEN MSG = "''P5' ( en tu ''P2' de ''GNS$PRY' - ''P3' )"
$!	READ/END_OF_FILE=MAI FILE_INPUT REG
$!	TRM = F$EXTRACT(24,4,"''REG'")
$!	SEND 'TRM' "[1m''MSG'[0m"
$	IF P5 .EQS. "" THEN GOTO CON
$ MAI:
$	MAIL/SUBJECT="''MSG'" 'P4' 'USUARIO'
$ CON:
$!	CLOSE FILE_INPUT
$!	DELETE TMP:'PID'SEAR.TMP;*
$!	I = I + 1
$!	GOTO ELM
$ FIN:
$!	DELETE TMP:'PID'USER.TMP;*
$	DELETE 'P4';*
