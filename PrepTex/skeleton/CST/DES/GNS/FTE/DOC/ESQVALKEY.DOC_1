          VAL-{reg}-{tipo}-{nombre} SECTION.
          INI-VAL-{reg}-{tipo}-{nombre}.
a) *% INCLUDE {reg}_{tipo}_{nombre} OF 'SGCBM{frm}.TXT'
          FIN-VAL-{reg}-{tipo}-{nombre}.
              EXIT.
       
